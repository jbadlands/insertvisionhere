
<div class="page">

<h1>Editing news</h1>

<% form_for(@news) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Update', :class => "submit" %>
  </p>
<% end %>

<%= link_to 'Show', @news %> |
<%= link_to 'Back', news_path %>

</div>

</div>